@model MANOR.API.ViewModels.LapViewModel

@{
    ViewBag.Title = "PopulateDropDown";

    var options = new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "searchResult",
        LoadingElementId = "loadingEl"
    };
}

<h2>Compare Laps:</h2>


<div class="row">
    <div class="col-md-8 col-lg-offset-2 text-center">

        @using (Ajax.BeginForm("Comparelaps", "Home", options, new { @id = "searchForm" }))
        {
            <div class="form-inline">
                <div class="form-group">
                    @Html.Label("CH1")
                    @Html.DropDownListFor(m => m.TelemetryModel.SelectedCh1, Model.TelemetryModel.Chone, "Select CH1 laps", new { @class = "form-control custom-select", @id = "ch1" })
                </div>

                <div class="form-group">
                    @Html.Label("CH2")
                    @Html.DropDownListFor(m => m.TelemetryModel.SelectedCh2, Model.TelemetryModel.Chtwo, "Select CH2 laps", new { @class = "form-control custom-select", @id = "ch2" })
                </div>

                <div class="form-group">
                    <input id="subbtn" class="btn btn-primary submitbut" value="Search" type="submit">
                </div>
            </div>
        }

        <div id="searchResult">
            @if (Model.LapModel != null)
            {
                @Html.Partial("_lapcomparison", Model);

            }
        </div>

    </div>
</div>
